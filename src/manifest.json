{
  "manifest_version": 2,
  "name": "Name & Address column",
  "description": "Combines Name and E-mail address together in one column.",
  "version": "1.0",
  "author": "≈Åukasz Kosson & Savasdotexe",
  "applications": {
    "gecko": {
      "id": "namenaddress-column@outlook.com",
      "strict_min_version": "68.0a1"
    }
  },
  "experiment_apis": {
    "FAC": {
      "schema": "schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          ["FAC"]
        ],
        "script": "experiments.js",
        "events": ["startup"]
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "48": "icon48.png"
  }
}
